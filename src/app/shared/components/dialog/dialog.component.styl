.dialog-container
  width 100vw
  height 100vh
  position fixed
  top 0
  left 0
  background: rgba(0,0,0,0.5);
  z-index: 99;
  overflow: hidden;
  display flex
  align-items center
  justify-content center

.dialog-card
  background white
  width max-content
  height auto
  position absolute

.dialog-close-area
  width 100%
  height 100%
  background transparent
  cursor pointer

.dialog-content
  width 100%
  height 100%
  display block

.dialog-display-hide
  display none
